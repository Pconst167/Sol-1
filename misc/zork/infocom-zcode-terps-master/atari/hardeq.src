ROWCRS	EQU	$54		; OS CURSOR ROW
COLCRS	EQU	$55		; OS CURSOR COLUMN

	; ---------
	; PAGES 2-3
	; ---------

SDMCTL	EQU	$022F		; DMA CONTROL
SDLSTL	EQU	$0230		; DISPLAY LIST ADDRESS
COLDST	EQU	$0244		; COLDSTART FLAG
GPRIOR	EQU	$026F		; GRAPHICS PRIORITY
