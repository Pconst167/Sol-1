DBUFLO	EQU	$0304		; DISK BUFFER ADDR (LSB)
DBUFHI	EQU	$0305		; DISK BUFFER ADDR (MSB)
DAUX1	EQU	$030A		; SECTOR ADDR (LSB)
DAUX2	EQU	$030B		; SECTOR ADDR (MSB)
ICCOM	EQU	$0342		; IOCB #0 COMMAND
ICBADR	EQU	$0344		; IOCB #0 BUFFER ADDR
