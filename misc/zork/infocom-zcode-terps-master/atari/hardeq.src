	; GTIA, POKEY, ANTIC
	; ------------------

HPOSP0	EQU	$D000		; PLAYER #0 H-POS
HPOSM0	EQU	$D004		; MISSILE #0 H-POS
SIZEM	EQU	$D00C		; MISSILE SIZES
