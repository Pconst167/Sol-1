	PAGE
	SBTTL "--- HARDWARE EQUATES: ATARI ---"

	; ----------------
	; ATARI MEMORY MAP
	; ----------------

IOBUFF	EQU	$0400		; DISK I/O BUFFER
BUFTOP	EQU	$0480		; TOP HALF OF I/O BUFFER
ZSTAKL	EQU	$0500		; Z-STACK LSBS
